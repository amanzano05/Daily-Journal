<%- include('partials/header') -%>

<h1>Compose</h1>


<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="entryTitle" class="form-control">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea type="text" name="entryText" class="form-control" rows="5"></textarea>
  </div>
  <button type="submit" name="entryButton" class="btn btn-primary">Publish</button>
</form>


